<h1>Confirm</h1>
<h1>Ecran de confirmation</h1>
<div class="container">
  <div class="text-center">
    <div class="column">
      <div class="row">
        <%= form_with(model: @post, url: posts_path, local: true) do |form| %>
        <%= image_tag(@post.image.url,class:'img-fluid w-70 img-thumbnail') if @post.image && @post.image.url %>
        <p><%= @post.content %></p>
        <%= form.hidden_field :content %>
        <%= form.hidden_field :image_cache %>
        <%= form.hidden_field :image %>
        <%= form.submit "Poster" ,class:'btn btn-success'%>
      <% end %>
          <%= form_with(model:@post, url:new_post_path, local:true, method:"get") do |form| %>
          <%= form.hidden_field :image_cache %>
          <%= form.submit "Revenir", name: "back" ,class:'btn btn-warning'%>
      <% end %>
      </div>
  </div>
</div>