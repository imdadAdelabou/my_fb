
<div class="newPost">
        <%= link_to 'NEW POST', new_post_path, class: 'customLink' %>
    </div>
<div id= "allPost">
    <h1>All Post</h1>
    
    <% @posts.each do |post| %>
        <div class="cardPost">
        <div class="head">
            <div class="avatar">
            </div>
            <h5>Imdad Adelabou</h5>
            <div class="rightButton">
                <div class="btn">
                    <%= link_to 'Show', post_path(post.id), class: 'customLink' %>
                </div>
                <div class="btn">
                    <%= link_to 'Edit', edit_post_path(post.id), class: 'customLink' %>
                </div>
                <div class="btn">
                    <%= link_to 'Destroy', post_path(post.id), class: 'customLink', method: :delete %>
                </div>
            </div>
        </div>
        <div class="text">
            <p><%= post.content %></p>
        </div>
            <%if post.image && post.image.url%>
                 <%= image_tag post.image.url , :class => "cimg" %>
            <% end %>
        </div>
    <% end %>
</div>